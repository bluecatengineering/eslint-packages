{
  "name": "eslint-packages",
  "description": "Packages for ESLint",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:bluecatengineering/eslint-packages.git"
  },
  "devDependencies": {
    "@bluecateng/git-checks": "^0.2.0",
    "eslint": "^6.7.2",
    "husky": "^3.1.0",
    "lerna": "^3.19.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "check-git-msg",
      "pre-push": "check-git-commits"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix --max-warnings 0",
      "prettier --write",
      "git add"
    ],
    "*.{md,yml}": [
      "prettier --write",
      "git add"
    ]
  }
}
