{
  "name": "eslint-packages",
  "version": "0.4.1",
  "description": "Packages for ESLint",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:bluecatengineering/eslint-packages.git"
  },
  "devDependencies": {
    "@bluecateng/git-checks": "^0.1.1",
    "eslint": "^6.0.1",
    "husky": "^3.0.0",
    "lint-staged": "^9.2.0",
    "prettier": "^1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "check-git-msg",
      "pre-push": "check-git-commits"
    }
  },
  "lint-staged": {
      "*.{js}": [
        "eslint --fix --max-warnings 0",
        "prettier --write",
        "git add"
      ],
      "*.{md,yml}": [
        "prettier --write",
        "git add"
      ]
  }
}
